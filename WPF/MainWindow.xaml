<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Right" Margin="0,0,0.4,-0.2" Width="518">
        <!-- Setting Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height ="154.8"/>
        </Grid.RowDefinitions>

        <!-- Setting Width -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147.2"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Background="AliceBlue" Content="Text RPG Game" Margin="0,0,0.2,64.6" Grid.RowSpan="2"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Player Data" Background="Aqua" Margin="0,0,0.2,2.6"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Location" Background="Yellow"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Game Data" Background="Beige"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Inventory" Background="GreenYellow"/>

    </Grid>
</Window>
